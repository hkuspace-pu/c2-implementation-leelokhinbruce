<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line"
    tools:context=".mainpage.ReservationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="48dp"
        android:paddingBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/reservations"
            android:textAppearance="@style/screen_title_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistory"
            style="@style/TopRightButtonCorners"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="@color/orange"
            android:paddingHorizontal="12dp"
            android:text="@string/history"
            android:textAppearance="@style/section_text"
            app:icon="@drawable/history_icon"
            app:iconSize="36dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

<!--  TabLayout  -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/small_text"
        app:tabTextColor="@color/grey"
        app:tabSelectedTextColor="@color/orange"
        app:tabIndicatorColor="@color/orange" />

<!--   Reservation List -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerReservationList"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>