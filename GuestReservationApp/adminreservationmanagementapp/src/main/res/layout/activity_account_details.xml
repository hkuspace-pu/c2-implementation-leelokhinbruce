<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".settings.AccountDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48dp"
                android:text="@string/account_details"
                android:textAlignment="center"
                android:textAppearance="@style/screen_subtitle_text" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgBtnClose"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/close_icon" />
        </FrameLayout>

        <!--       Account details -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--       Username -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputUsername"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/username"
                    android:paddingBottom="12dp"
                    android:textColorHint="@color/hint_and_stroke"
                    app:boxStrokeColor="@color/orange"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/grey"
                    app:placeholderText="admin123"
                    app:placeholderTextColor="@color/hint_and_stroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editUsername"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/disable"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:ems="30"
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:maxLength="30"
                        android:textAppearance="@style/input_field_text" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username can't be changed"
                        android:textAppearance="@style/small_grey_text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--       Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputEmail"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/email"
                    android:textColorHint="@color/hint_and_stroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/disable"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textWebEmailAddress"
                        android:lines="1"
                        android:textAppearance="@style/input_field_text" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email can't be changed"
                        android:textAppearance="@style/small_grey_text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--       Phone -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputPhone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/phone_number"
                    android:textColorHint="@color/hint_and_stroke"
                    app:boxStrokeColor="@color/orange"
                    app:counterMaxLength="15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_input_field"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!--               Country Code Spinner -->
                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinnerCountryCode"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:entries="@array/country_codes"
                            android:spinnerMode="dropdown" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="18dp"
                            android:background="@color/hint_and_stroke" />

                        <!--               Phone Number -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="123 456 7890"
                            android:importantForAutofill="yes"
                            android:inputType="phone"
                            android:lines="1"
                            android:maxLength="20"
                            android:textAppearance="@style/input_field_text" />

                    </LinearLayout>
                </com.google.android.material.textfield.TextInputLayout>

                <!--       Job Title -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputRole"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/jot_title"
                    android:textColorHint="@color/hint_and_stroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editJobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/disable"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textAppearance="@style/input_field_text" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Member role can't be changed"
                        android:textAppearance="@style/small_grey_text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--       Working Branch -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputWorkingBranch"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp"
                    android:hint="@string/working_branch"
                    android:textColorHint="@color/hint_and_stroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editWorkingBranch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/disable"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:textAppearance="@style/input_field_text" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Branch location can't be changed"
                        android:textAppearance="@style/small_grey_text" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:background="@drawable/btn_bg"
        android:padding="12dp"
        android:text="@string/update_btn"
        android:textAppearance="@style/btn_text" />
</RelativeLayout>