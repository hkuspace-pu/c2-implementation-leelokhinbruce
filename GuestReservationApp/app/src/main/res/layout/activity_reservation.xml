<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reservation.ReservationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="32dp"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reservation"
                android:textAlignment="center"
                android:textAppearance="@style/screen_subtitle_text" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgBtnClose"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/close_icon" />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_marginStart="16dp"
            android:text="@string/date"
            android:textAppearance="@style/section_text" />

<!--       Date Picker -->
        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_marginStart="16dp"
            android:text="@string/Time"
            android:textAppearance="@style/section_text" />

        <!--       Time List -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:scrollbars="none"
            android:fillViewport="true">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:chipSpacing="10dp"
                    app:itemSpacing="15dp"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:singleLine="true">
<!--                   List chips by executing ReservationActivity.java -->
                </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_marginStart="16dp"
            android:text="@string/guest"
            android:textAppearance="@style/section_text" />

        <!--       Guest List -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:scrollbars="none"
            android:fillViewport="true">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupGuest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:chipSpacing="10dp"
                app:itemSpacing="15dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:singleLine="true">
                <!--                   List chips by executing ReservationActivity.java -->
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_marginStart="16dp"
            android:text="Occasion (optional)"
            android:textAppearance="@style/section_text" />
        <!--       Occasion List -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:scrollbars="none"
            android:fillViewport="true">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupOccasion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:chipSpacing="10dp"
                app:itemSpacing="15dp"
                app:singleSelection="true">
                <!--                   List chips by executing ReservationActivity.java -->
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
    </LinearLayout>

<!--   Continue Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_btn"
        android:padding="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btn_bg"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/btn_text" />
</RelativeLayout>