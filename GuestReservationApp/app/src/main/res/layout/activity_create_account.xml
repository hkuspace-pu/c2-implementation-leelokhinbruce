<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".CreateAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="120dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textAlignment="center"
            android:paddingBottom="58dp"
            android:textAppearance="@style/screen_title_text" />

<!--       Username -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            android:textColorHint="@color/hint_and_stroke"
            android:paddingBottom="12dp"
            app:boxStrokeColor="@color/orange"
            app:endIconMode="clear_text"
            app:endIconTint="@color/grey"
            app:passwordToggleTint="@color/grey"
            app:placeholderText="peter"
            app:placeholderTextColor="@color/hint_and_stroke">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:maxLength="60"
                android:ems="60"
                android:inputType="textPersonName"
                android:textAppearance="@style/input_field_text" />
        </com.google.android.material.textfield.TextInputLayout>

<!--       Email -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:textColorHint="@color/hint_and_stroke"
            android:paddingBottom="12dp"
            app:boxStrokeColor="@color/orange"
            app:endIconMode="clear_text"
            app:endIconTint="@color/grey"
            app:passwordToggleTint="@color/grey"
            app:placeholderText="peter@gmail.com"
            app:placeholderTextColor="@color/hint_and_stroke">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:maxLength="60"
                android:ems="60"
                android:inputType="textWebEmailAddress"
                android:textAppearance="@style/input_field_text" />
        </com.google.android.material.textfield.TextInputLayout>

<!--       Password -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputPasswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:textColorHint="@color/hint_and_stroke"
            android:paddingBottom="12dp"
            app:boxStrokeColor="@color/orange"
            app:counterEnabled="true"
            app:counterMaxLength="30"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/grey"
            app:passwordToggleTint="@color/grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPasswd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:maxLength="30"
                android:ems="30"
                android:inputType="textPassword"
                android:textAppearance="@style/input_field_text" />
        </com.google.android.material.textfield.TextInputLayout>

<!--       Confirmed Password -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputConfirmPasswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirmed_password"
            android:textColorHint="@color/hint_and_stroke"
            android:paddingBottom="12dp"
            app:boxStrokeColor="@color/orange"
            app:counterMaxLength="30"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/grey"
            app:passwordToggleTint="@color/grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editConfirmPasswd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:maxLength="30"
                android:ems="30"
                android:inputType="textPassword"
                android:textAppearance="@style/input_field_text" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_btn"
            android:padding="12dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/btn_bg"
            android:textAppearance="@style/btn_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textSize="16sp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/linkLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_btn"
                android:background="@drawable/underline"
                android:textAppearance="@style/link_text" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>