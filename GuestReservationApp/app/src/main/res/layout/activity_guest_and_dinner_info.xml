<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myprofile.PersonalDetailsActivity">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imgBtnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_marginTop="32dp"
        android:src="@drawable/left_arrow_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guest_and_dinner_info"
                android:paddingTop="48dp"
                android:textAlignment="center"
                android:textAppearance="@style/screen_subtitle_text" />
        </FrameLayout>

<!--    First Name    -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/firstname"
            android:textColorHint="@color/hint_and_stroke"
            android:paddingBottom="12dp"
            app:boxStrokeColor="@color/orange"
            app:endIconMode="clear_text"
            app:endIconTint="@color/grey"
            app:placeholderText="Peter"
            app:placeholderTextColor="@color/hint_and_stroke">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editFirstName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="30"
                android:ems="30"
                android:inputType="textPersonName"
                android:textAppearance="@style/input_field_text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--    Last Name    -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lastname"
            android:textColorHint="@color/hint_and_stroke"
            android:paddingBottom="12dp"
            app:boxStrokeColor="@color/orange"
            app:endIconMode="clear_text"
            app:endIconTint="@color/grey"
            app:placeholderText="Peter"
            app:placeholderTextColor="@color/hint_and_stroke">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editLastName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="30"
                android:ems="30"
                android:inputType="textPersonName"
                android:textAppearance="@style/input_field_text" />
        </com.google.android.material.textfield.TextInputLayout>

<!--       Email -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:textColorHint="@color/hint_and_stroke"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:inputType="textWebEmailAddress"
                android:textAppearance="@style/input_field_text"
                android:background="@color/disable"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email can't be changed"
                android:textAppearance="@style/small_grey_text" />
        </com.google.android.material.textfield.TextInputLayout>

<!--       Phone Number -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number"
            android:textColorHint="@color/hint_and_stroke"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="@color/orange"
            app:counterMaxLength="15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner_input_field"
                android:gravity="center_vertical">

                <!--               Country Code Spinner -->
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerCountryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:entries="@array/country_codes"
                    android:spinnerMode="dropdown" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/hint_and_stroke"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="18dp" />

                <!--               Phone Number -->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="20"
                    android:hint="123 456 7890"
                    android:importantForAutofill="yes"
                    android:textAppearance="@style/input_field_text" />
            </LinearLayout>
        </com.google.android.material.textfield.TextInputLayout>

