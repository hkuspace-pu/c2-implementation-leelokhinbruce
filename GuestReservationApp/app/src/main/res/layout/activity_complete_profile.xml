<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".CompleteProfileActivity">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imgBtnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_marginTop="32dp"
        android:src="@drawable/left_arrow_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete Profile"
            android:textAlignment="center"
            android:paddingBottom="32dp"
            android:textAppearance="@style/screen_subtitle_text" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imgBtnEditPhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="24dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/edit_profile_icon" />

<!--       First Name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/firstname"
            android:textColorHint="@color/hint_and_stroke"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="@color/orange"
            app:endIconMode="clear_text"
            app:endIconTint="@color/grey"
            app:passwordToggleTint="@color/grey"
            app:placeholderText="peter@gmail.com"
            app:placeholderTextColor="@color/hint_and_stroke">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editFirstName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:maxLength="30"
                android:ems="30"
                android:inputType="textPersonName"
                android:textAppearance="@style/input_field_text" />
        </com.google.android.material.textfield.TextInputLayout>

<!--       Last Name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lastname"
            android:textColorHint="@color/hint_and_stroke"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="@color/orange"
            app:endIconMode="clear_text"
            app:endIconTint="@color/grey"
            app:passwordToggleTint="@color/grey"
            app:placeholderText="peter@gmail.com"
            app:placeholderTextColor="@color/hint_and_stroke">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editLastName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:maxLength="30"
                android:ems="30"
                android:inputType="textPersonName"
                android:textAppearance="@style/input_field_text" />
        </com.google.android.material.textfield.TextInputLayout>

<!--       Phone Number -->
<!--        <androidx.appcompat.widget.AppCompatTextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/phone_number"-->
<!--            android:textAppearance="@style/regular_text"-->
<!--            android:paddingBottom="4dp" />-->

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number"
            android:textColorHint="@color/hint_and_stroke"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="@color/orange"
            app:counterMaxLength="15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner_input_field"
                android:gravity="center_vertical">

<!--               Country Code Spinner -->
                <androidx.appcompat.widget.AppCompatSpinner
                    style="@style/CustomSpinner"
                    android:id="@+id/spinnerCountryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:entries="@array/country_codes"
                    android:spinnerMode="dropdown" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/hint_and_stroke"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="18dp" />

<!--               Phone Number -->
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="20"
                    android:hint="123 456 7890"
                    android:importantForAutofill="yes"
                    android:textAppearance="@style/input_field_text" />

            </LinearLayout>
        </com.google.android.material.textfield.TextInputLayout>

<!--       Gender -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/textInputGender"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="@string/gender"
            android:textColorHint="@color/hint_and_stroke"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_corner_input_field"
            app:boxStrokeColor="@color/orange">

            <androidx.appcompat.widget.AppCompatSpinner
                style="@style/CustomSpinner"
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:entries="@array/genders"
                android:spinnerMode="dropdown" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/complete_btn"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_bg"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/btn_text" />
</RelativeLayout>